<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/from_user"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dip"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="4dip"
                android:layout_weight="1"
                android:text="留言者:"
                android:textColor="@color/activity_title_text"
                android:textSize="14dip" />

            <TextView
                android:id="@+id/to_user"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="4dip"
                android:layout_weight="1"
                android:gravity="right"
                android:text="接收人:"
                android:textColor="@color/activity_title_text"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_content_bg"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip">

            <TextView
                android:id="@+id/text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:minLines="2"
                android:textSize="13dip" />

            <TextView
                android:id="@+id/time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:paddingRight="10dip"
                android:textColor="@color/list_item_company"
                android:textSize="11dip" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="25dip"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="状态:[未读]"
            android:textColor="@color/activity_title_text"
            android:textSize="12dip" />

        <Button
            android:id="@+id/isRead"
            android:layout_width="68dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_style_white_rect_button"
            android:text="确认"
            android:textColor="@color/dark_blue"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="9dip"
        android:background="@color/list_item_btm_line"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="1px"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>