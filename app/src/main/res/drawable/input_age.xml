<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gray" />
            <!--
            渐变 
            <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#ff8c00" />
            -->
            <!--
            描边
            <stroke android:width="2dip" android:color="@color/aliceblue" />
            -->

            <!-- 描边 -->
            <stroke android:width="1px" android:color="@color/white" />

            <!-- 圆角 -->
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:radius="9dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" /> <!-- 设置圆角半径 -->
            <!-- <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" /> -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <!--
            渐变 
            <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#ff8c00" />
            -->
            <!-- 描边 -->
            <stroke android:width="1px" android:color="@color/lightgray" />

            <!-- 圆角 -->
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:radius="9dp" android:topLeftRadius="2dp" android:topRightRadius="2dp" /> <!-- 设置圆角半径 -->
            <!-- <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" /> -->
        </shape>
    </item>

</selector>