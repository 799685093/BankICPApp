<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1"
        android:background="@color/home_room_info_bg"
        android:orientation="vertical">

        <com.bankicp.app.view.DragScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:background="@mipmap/main_top_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:text="当前选中机房"
                    android:textColor="@color/lightskyblue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/room_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dip"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/room_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dip"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/room_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dip"
                    android:textSize="14sp" />

            </LinearLayout>
        </com.bankicp.app.view.DragScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/home_left_btn_scan"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="2dip"
                android:layout_marginTop="4dip"
                android:layout_weight="1"
                android:background="@drawable/btn_style_white_rect_button"
                android:text="扫描"
                android:textColor="@color/dark_blue"
                android:textSize="14sp" />

            <Button
                android:id="@+id/home_left_btn_log"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="4dip"
                android:layout_marginTop="4dip"
                android:layout_weight="1"
                android:background="@drawable/btn_style_white_rect_button"
                android:text="换班"
                android:textColor="@color/dark_blue"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/home_left_btn_update"
                android:layout_width="0.0dip"
                android:layout_height="50dip"
                android:layout_marginBottom="4dip"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="2dip"
                android:layout_marginTop="2dip"
                android:layout_weight="1"
                android:background="@drawable/btn_style_white_rect_button"
                android:text="同步"
                android:textColor="@color/dark_blue"
                android:textSize="14sp" />

            <Button
                android:id="@+id/home_left_btn_feekback"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_marginBottom="4dip"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="4dip"
                android:layout_marginTop="2dip"
                android:layout_weight="1"
                android:background="@drawable/btn_style_white_rect_button"
                android:text="上报"
                android:textColor="@color/dark_blue"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1"
        android:background="@color/home_room_info_bg"
        android:orientation="vertical">

        <com.bankicp.app.view.DragScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="35dip"
                    android:background="@mipmap/main_top_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:text="任务概要"
                    android:textColor="@color/lightskyblue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dip"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dip"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dip"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dip"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dip"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dip"
                    android:textSize="14sp" />
            </LinearLayout>
        </com.bankicp.app.view.DragScrollView>
    </LinearLayout>

</LinearLayout>