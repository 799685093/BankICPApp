<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/right_top_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.bankicp.app.view.MGridView
            android:id="@+id/grid_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="4dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="4dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/right_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/isException"
                    android:layout_width="68dip"
                    android:layout_height="44dip"
                    android:layout_margin="4dip"
                    android:background="@drawable/btn_style_white_rect_button"
                    android:text="正常"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/isWarn"
                    android:layout_width="68dip"
                    android:layout_height="44dip"
                    android:layout_margin="4dip"
                    android:background="@drawable/btn_style_white_rect_button"
                    android:text="绿灯"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/left_top_btn_sign"
                android:layout_width="86dip"
                android:layout_height="44dip"
                android:layout_marginRight="8dip"
                android:background="@drawable/btn_style_white_rect_button"
                android:text="批量领取"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <Button
                android:id="@+id/left_top_btn_scan"
                android:layout_width="86dip"
                android:layout_height="44dip"
                android:layout_marginRight="8dip"
                android:background="@drawable/btn_style_white_rect_button"
                android:text="开始扫描"
                android:textColor="@color/dark_blue"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/line_gary_h" />

        <com.bankicp.app.view.DragScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/right_list_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.bankicp.app.view.mListView
                    android:id="@+id/list_view"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_above="@+id/grid_image"
                    android:layout_alignParentTop="true"
                    android:cacheColorHint="#00000000"
                    android:divider="@color/item_line"
                    android:dividerHeight="1px"
                    android:fastScrollEnabled="false"
                    android:footerDividersEnabled="false"
                    android:headerDividersEnabled="false"
                    android:scrollingCache="false"
                    android:smoothScrollbar="true" />

                <com.bankicp.app.view.MGridView
                    android:id="@+id/grid_image"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:columnWidth="50dp"
                    android:gravity="center"
                    android:horizontalSpacing="4dp"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="4dp" />
            </RelativeLayout>
        </com.bankicp.app.view.DragScrollView>

        <EditText
            android:id="@+id/remark"
            android:layout_width="fill_parent"
            android:layout_height="46dip"
            android:layout_margin="4dip"
            android:background="@drawable/wb_login_textline_selector"
            android:ems="10"
            android:gravity="top|left"
            android:hint="请输入备注"
            android:inputType="textMultiLine"
            android:minHeight="40dp"
            android:minLines="3"
            android:padding="8dip"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/line_gary_h" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dip"
        android:layout_marginTop="3dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save_all"
            android:layout_width="0.0dip"
            android:layout_height="44dip"
            android:layout_marginLeft="8dip"
            android:layout_weight="1"
            android:background="@drawable/btn_style_white_rect_button"
            android:text="批量完成"
            android:textColor="@color/dark_blue"
            android:textSize="14sp" />

        <Button
            android:id="@+id/save"
            android:layout_width="0.0dip"
            android:layout_height="44dip"
            android:layout_marginLeft="8dip"
            android:layout_weight="1"
            android:background="@drawable/btn_style_white_rect_button"
            android:text="保存"
            android:textColor="@color/dark_blue"
            android:textSize="14sp" />

        <Button
            android:id="@+id/reset"
            android:layout_width="0.0dip"
            android:layout_height="44dip"
            android:layout_marginLeft="8dip"
            android:layout_weight="1"
            android:background="@drawable/btn_style_white_rect_button"
            android:text="重置"
            android:textColor="@color/dark_blue"
            android:textSize="14sp" />

        <Button
            android:id="@+id/back"
            android:layout_width="0.0dip"
            android:layout_height="44dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_weight="1"
            android:background="@drawable/btn_style_white_rect_button"
            android:text="返回"
            android:textColor="@color/dark_blue"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>